<h1>Create a New Portfolio Item</h1>

<!-- Form to create new portfolio item -->
<!-- form_for = method. It expects an argument(portfolio_item).
     We need to make @portfolio_item available for controller -->
<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>